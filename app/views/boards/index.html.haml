%h1 Listing boards

%table
  %thead
    %tr
      %th Lists
      %th Name
      %th Owner
      %th
      %th
      %th

  %tbody
    - @boards.each do |board|
      %tr
        %td= board.lists
        %td= board.name
        %td= board.owner
        %td= link_to 'Show', board
        %td= link_to 'Edit', edit_board_path(board)
        %td= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' }

